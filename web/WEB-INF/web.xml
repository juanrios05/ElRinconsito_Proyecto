<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ControladorServlet</servlet-name>
        <servlet-class>Controladores.ControladorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidarServlet</servlet-name>
        <servlet-class>Controladores.ValidarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Administrador</servlet-name>
        <servlet-class>Controladores.Administrador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Usuario</servlet-name>
        <servlet-class>Controladores.Usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Factura</servlet-name>
        <servlet-class>Controladores.Factura</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControladorServlet</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidarServlet</servlet-name>
        <url-pattern>/Validar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Administrador</servlet-name>
        <url-pattern>/Administrador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Factura</servlet-name>
        <url-pattern>/Factura</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>RegistroUsuarioServlet</servlet-name>
        <servlet-class>Controladores.RegistroUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroUsuarioServlet</servlet-name>
        <servlet-class>Controladores.RegistroUsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistroUsuarioServlet</servlet-name>
        <servlet-class>Controladores.RegistroUsuarioServlet</servlet-class>
    </servlet>
</web-app>
